        "migrate:up": "migrate-mongo up",
        "migrate:down": "migrate-mongo down"
    },
    "dependencies": {
        "@typegoose/typegoose": "^9.12.1",
        "apollo-server-express": "^3.11.1",
        "bcrypt": "^5.0.1",
        "concurrently": "^6.0.0",
        "dotenv": "^16.0.3",
        "express": "^4.17.1",
        "express-jwt": "^7.7.7",
        "graphql": "^15.5.0",
        "graphql-playground-middleware-express": "^1.7.22",
        "jsonwebtoken": "^8.5.1",
        "migrate-mongo": "^8.2.2",
        "mongoose": "^6.7.2",
        "nodemon": "^2.0.7",
        "pm2": "^5.2.2",
        "reflect-metadata": "^0.1.13",
        "type-graphql": "^1.1.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/express": "^4.17.14",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/node": "^18.11.9",
        "artillery": "1.6.1",
        "random-sentence": "^1.0.4",
        "typescript": "^4.2.3"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "trailingComma": "all",
        "arrowParens": "avoid"
    }
}
