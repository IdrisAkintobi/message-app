    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "develop": "concurrently 'yarn tsc -w' 'yarn nodemon build/init.js'",
        "build": "tsc",
        "start": "pm2 start pm2.json --no-daemon",
        "artillery:run": "artillery run ./artillery/main.yml",
